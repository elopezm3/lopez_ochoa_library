  <%= link_to "â† Volver", :back, class: "text-amber-600 hover:underline" %>
</div>

<h1 class="text-3xl font-bold text-amber-900 mb-6">Nueva Copia</h1>

<div class="bg-white rounded-lg shadow p-6 max-w-lg">
  <%= form_with model: @copy, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :libro_id, "Libro", class: "block text-gray-700 font-medium mb-1" %>
      <%= f.collection_select :libro_id, Libro.includes(:autor).joins(:autor).order('autores.apellido, autores.nombre, libros.titulo'), :id, ->(l) { "#{l.titulo} - #{l.autor.apellido_y_nombre}" }, { prompt: "Seleccione un libro..." }, { class: "w-full border rounded px-3 py-2 focus:outline-none focus:ring-2 focus:ring-amber-500", data: { controller: "tom-select", tom_select_placeholder_value: "Buscar libro..." } } %>
    </div>

    <div>
      <%= f.submit "Crear Copia", class: "bg-amber-600 text-white px-6 py-2 rounded hover:bg-amber-700 cursor-pointer" %>
    </div>
  <% end %>
</div>
