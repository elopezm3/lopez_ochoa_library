<div class="flex justify-between items-center mb-6">
  <h1 class="text-3xl font-bold text-amber-900">Copias</h1>
</div>

<div class="flex space-x-2 mb-6">
  <%= link_to "Todas", copias_path, class: "px-4 py-2 rounded #{params[:estado].blank? ? 'bg-amber-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
  <%= link_to "Disponibles", copias_path(estado: 'disponibles'), class: "px-4 py-2 rounded #{params[:estado] == 'disponibles' ? 'bg-green-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
  <%= link_to "Prestadas", copias_path(estado: 'prestadas'), class: "px-4 py-2 rounded #{params[:estado] == 'prestadas' ? 'bg-orange-600 text-white' : 'bg-gray-200 text-gray-700 hover:bg-gray-300'}" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="w-full">
    <thead class="bg-amber-100">
      <tr>
        <th class="px-4 py-3 text-left">Libro</th>
        <th class="px-4 py-3 text-left">Autor</th>
        <th class="px-4 py-3 text-left">Estado</th>
        <th class="px-4 py-3 text-left">Fecha</th>
        <th class="px-4 py-3 text-right">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @copies.each do |copy| %>
        <tr class="border-b hover:bg-amber-50">
          <td class="px-4 py-3"><%= link_to copy.libro.titulo, copy.libro, class: "text-amber-600 hover:underline" %></td>
          <td class="px-4 py-3"><%= copy.libro.autor.apellido_y_nombre %></td>
          <td class="px-4 py-3">
            <% if copy.loaned? %>
              <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-sm">
                Prestado a: <%= copy.prestamo %>
              </span>
            <% else %>
              <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">
                Disponible
              </span>
            <% end %>
          </td>
          <td class="px-4 py-3"><%= copy.fecha&.strftime("%d/%m/%Y") || "-" %></td>
          <td class="px-4 py-3 text-right space-x-2">
            <%= link_to "Ver Libro", copy.libro, class: "text-amber-600 hover:underline" %>
            <% if copy.loaned? %>
              <%= link_to "Devolver", return_copia_path(copy), method: :patch, data: { turbo_method: :patch }, class: "text-green-600 hover:underline" %>
            <% end %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
