<div class="mb-6">
  <%= link_to "← Volver a Libros", libros_path, class: "text-amber-600 hover:underline" %>
</div>

<div class="bg-white rounded-lg shadow p-6 mb-6">
  <h1 class="text-3xl font-bold text-amber-900 mb-2"><%= @book.titulo %></h1>
  <p class="text-gray-600 mb-4">Por: <%= link_to @book.autor.apellido_y_nombre, @book.autor, class: "text-amber-600 hover:underline" %></p>
  <div class="flex space-x-4">
    <%= link_to "Editar", edit_libro_path(@book), class: "text-blue-600 hover:underline" %>
    <%= link_to "Eliminar", @book, method: :delete, data: { turbo_method: :delete, turbo_confirm: "¿Está seguro?" }, class: "text-red-600 hover:underline" %>
  </div>
</div>

<div class="flex justify-between items-center mb-4">
  <h2 class="text-xl font-bold text-amber-900">Copias (<%= @copies.count %>)</h2>
  <%= link_to "➕ Añadir Copia", new_copia_path(libro_id: @book.id), class: "bg-amber-600 text-white px-3 py-1 rounded text-sm hover:bg-amber-700" %>
</div>

<div class="bg-white rounded-lg shadow overflow-hidden">
  <table class="w-full">
    <thead class="bg-amber-100">
      <tr>
        <th class="px-4 py-3 text-left">Copia #</th>
        <th class="px-4 py-3 text-left">Estado</th>
        <th class="px-4 py-3 text-left">Fecha Préstamo</th>
        <th class="px-4 py-3 text-right">Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% @copies.each_with_index do |copy, index| %>
        <tr class="border-b hover:bg-amber-50">
          <td class="px-4 py-3"><%= index + 1 %></td>
          <td class="px-4 py-3">
            <% if copy.loaned? %>
              <span class="bg-orange-100 text-orange-800 px-2 py-1 rounded text-sm">
                Prestado a: <%= copy.prestamo %>
              </span>
            <% else %>
              <span class="bg-green-100 text-green-800 px-2 py-1 rounded text-sm">
                Disponible
              </span>
            <% end %>
          </td>
          <td class="px-4 py-3"><%= copy.fecha&.strftime("%d/%m/%Y") || "-" %></td>
          <td class="px-4 py-3 text-right space-x-2">
            <% if copy.loaned? %>
              <%= link_to "Devolver", return_copia_path(copy), method: :patch, data: { turbo_method: :patch }, class: "text-green-600 hover:underline" %>
            <% else %>
              <%= button_to "Prestar", "#", class: "text-orange-600 hover:underline", onclick: "document.getElementById('loan-#{copy.id}').classList.toggle('hidden'); return false;" %>
            <% end %>
            <%= link_to "Eliminar", copy, method: :delete, data: { turbo_method: :delete, turbo_confirm: "¿Está seguro?" }, class: "text-red-600 hover:underline" %>
          </td>
        </tr>
        <% unless copy.loaned? %>
          <tr id="loan-<%= copy.id %>" class="hidden bg-amber-50">
            <td colspan="4" class="px-4 py-3">
              <%= form_with url: loan_copia_path(copy), method: :patch, class: "flex space-x-2" do %>
                <%= text_field_tag :nombre_prestamo, nil, placeholder: "Nombre de la persona...", class: "flex-1 border rounded px-3 py-2" %>
                <%= submit_tag "Confirmar Préstamo", class: "bg-orange-600 text-white px-4 py-2 rounded cursor-pointer hover:bg-orange-700" %>
              <% end %>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
